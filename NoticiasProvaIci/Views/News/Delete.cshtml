@model NoticiasProvaIci.Models.News

@{
    ViewData["Title"] = "Excluir Notícia";
}

<h2>Excluir Notícia</h2>

<div>
    <h4>Tem certeza que deseja excluir esta notícia?</h4>
    <dl class="row">
        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Conteúdo</dt>
        <dd class="col-sm-10">@Model.Content</dd>

        <dt class="col-sm-2">Usuário</dt>
        <dd class="col-sm-10">@Model.User?.Name</dd>

        <dt class="col-sm-2">Tags</dt>
        <dd class="col-sm-10">@string.Join(", ", Model.NewsTag.Select(nt => nt.Tag.Name))</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a class="btn btn-secondary" href="@Url.Action("Index", "News")">Cancelar</a>
</form>