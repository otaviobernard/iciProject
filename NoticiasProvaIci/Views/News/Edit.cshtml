@model NoticiasProvaIci.Models.News

@{
    ViewData["Title"] = "Editar Notícia";
}

<h2>Editar Notícia</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Content" class="form-label"></label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Tags</label>
        <select asp-for="NewsTag" class="form-control" multiple
                asp-items="ViewBag.Tags"></select>
    </div>

    <div class="mb-3">
        <label>Usuário</label>
        <select asp-for="UserId" class="form-control" asp-items="ViewBag.Users"></select>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a class="btn btn-secondary" href="@Url.Action("Index", "News")">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}